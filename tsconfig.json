{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
  ],
  "include": [
    "src"
  ]
}
